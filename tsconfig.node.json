{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "build",
    "strict": false,
    "declaration": true,
    "noEmit": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "downlevelIteration":true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "types": ["node"]
  },
  "include": [
    "generator"
  ],
  "exclude": [
    "dist_v4",
    "dist_v5",
    "src_v4",
    "src_v5",
    "node_modules"
  ]
}
